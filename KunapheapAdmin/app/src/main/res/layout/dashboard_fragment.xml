<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- title -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="24dp"
                android:text="DASHBOARD"
                android:textColor="@color/secondary"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_marginTop="20dp"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                app:cardElevation="10dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/third"
                app:strokeColor="@color/primary"
                app:strokeWidth="1dp"
                app:cardMaxElevation="2dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="160dp">
                <TextView
                    android:layout_marginTop="8dp"
                    android:text="Ordered"
                    android:textColor="@color/secondary"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="168"
                    android:textColor="@color/secondary"
                    android:textSize="28dp"
                    android:textStyle="normal"
                    android:id="@+id/ordered"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:text="Items"
                    android:textColor="@color/secondary"
                    android:textSize="20dp"
                    android:textStyle="normal" />

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                app:strokeColor="@color/primary"
                app:strokeWidth="1dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/third"
                app:cardMaxElevation="2dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="160dp">
                <TextView
                    android:layout_marginTop="8dp"
                    android:text="Item In Stock"
                    android:textColor="@color/secondary"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="1168"
                    android:textColor="@color/secondary"
                    android:textSize="28dp"
                    android:textStyle="normal"
                    android:id="@+id/instock"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:text="Item"
                    android:textColor="@color/secondary"
                    android:textSize="20dp"
                    android:textStyle="normal" />

            </com.google.android.material.card.MaterialCardView>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_marginTop="20dp"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                app:cardElevation="10dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/third"
                app:strokeColor="@color/primary"
                app:strokeWidth="1dp"
                app:cardMaxElevation="2dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="160dp">
                <TextView
                    android:layout_marginTop="8dp"
                    android:text="Sell"
                    android:textColor="@color/secondary"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="521"
                    android:textColor="@color/secondary"
                    android:textSize="28dp"
                    android:textStyle="normal"
                    android:id="@+id/sell"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:text="Items"
                    android:textColor="@color/secondary"
                    android:textSize="20dp"
                    android:textStyle="normal" />

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                app:strokeColor="@color/primary"
                app:strokeWidth="1dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/third"
                app:cardMaxElevation="2dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="160dp">
                <TextView
                    android:layout_marginTop="8dp"
                    android:text="Cencel"
                    android:textColor="@color/secondary"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="25"
                    android:textColor="@color/secondary"
                    android:textSize="28dp"
                    android:textStyle="normal"
                    android:id="@+id/cancel"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:text="Item"
                    android:textColor="@color/secondary"
                    android:textSize="20dp"
                    android:textStyle="normal" />

            </com.google.android.material.card.MaterialCardView>

        </androidx.appcompat.widget.LinearLayoutCompat>


        <!-- chart graph -->

        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/secondary"
            android:layout_marginHorizontal="20dp"
            android:drawableStart="@drawable/baseline_auto_graph_24"
            android:drawablePadding="10dp"
            android:text="Amount of sell in category for a month "
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.github.mikephil.charting.charts.BarChart
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:id="@+id/bar_chart"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="300dp"/>

            <com.github.mikephil.charting.charts.PieChart
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:id="@+id/pieChart"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="30dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>